<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DicodingEventAplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/biru_tua</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/tranparant</item>
        <!-- Customize your theme here. -->
        <item name="elevationOverlayEnabled">true</item>

    </style>

    <style name="Theme.StatusBar" parent="Theme.MaterialComponents.DayNight">
        <!-- Status bar ikon jadi hitam -->
        <item name="android:windowLightStatusBar">false</item>
        <!-- Warna status bar (bisa disesuaikan) -->
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="Text.Header24" parent="Theme.DicodingEventAplication">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Text.JudulBerita20" parent="Theme.DicodingEventAplication">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="Text.Subjudul16" parent="Theme.DicodingEventAplication">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="Text.Konten14" parent="Theme.DicodingEventAplication">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Text.Metadata12" parent="Theme.DicodingEventAplication">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Text.Header38_appbar" parent="Theme.DicodingEventAplication">
        <item name="android:textSize">38sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Text.Header22_appbar" parent="Theme.DicodingEventAplication">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Text.TombolCTA16" parent="Theme.DicodingEventAplication">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button.Back" parent="Theme.DicodingEventAplication">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="SearchViewStyle" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:textAppearance">@style/SearchViewTextApperance</item>
    </style>
    <style name="SearchViewTextApperance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Radius8">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="Radius8NoBottomRight">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
    </style>
    <style name="RadiusBottomRight16">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>
    <style name="RadiusTopRight16">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>
    <style name="Circular">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>